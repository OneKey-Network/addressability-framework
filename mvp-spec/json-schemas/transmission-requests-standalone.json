{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Standalone request with Transmissions Requests",
    "description": "A request of a custom communication for generating transmissions between two Contracting Parties for many Addressable Contents",
    "$id": "transmission-requests-standalone",
    "type": "object",
    "properties": {
        "data": {
            "$ref": "ids-and-preferences.json"
        },
        "transmissions": {
            "type": "array",
            "items": {
                "$ref": "transmission-request.json"
            }
        }
    },
    "required": [
        "data",
        "transmissions"
    ]
}