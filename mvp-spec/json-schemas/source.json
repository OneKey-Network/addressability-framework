{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Source",
  "description": "Data associated with the entity that created and signed the data",
  "$id": "source",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "$ref": "version.json"
    },
    "timestamp": {
      "$ref": "timestamp.json",
      "description": "Time when data was signed"
    },
    "domain": {
      "$ref": "domain.json",
      "description": "The domain name of the entity that signed this data"
    },
    "signature": {
      "$ref": "signature.json"
    }
  },
  "required": [
    "version",
    "timestamp",
    "domain",
    "signature"
  ]
}
