{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Transmission Result",
    "description": "",
    "$id": "transmission-result",
    "type": "object",
    "properties": {
        "version": {
            "$ref": "version.json"
        },
        "receiver": {
            "$ref": "transmission-receiver.json"
        },
        "status": {
            "$ref": "transmission-status.json"
        },
        "details": {
            "$ref": "transmission-details.json"
        },
        "transaction_ids": {
            "type": "array",
            "items": {
                "description": "The transaction-ids of the Addressable Contents for which the Receiver want to participate to",
                "$ref": "transaction_id.json"
            }
        },
        "source": {
            "description": "Signature based on input:\n```\nreceiver                + '\\u2063' +\nstatus                  + '\\u2063' \nsource.domain           + '\\u2063' +\nsource.timestamp        + '\\u2063' +\nseed.source.signature \n```",
            "$ref": "source.json"
        }
    },
    "required": [
        "version",
        "receiver",
        "status",
        "details",
        "source"
    ]
}